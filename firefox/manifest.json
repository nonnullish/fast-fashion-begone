{
  "name": "Fast Fashion Begone",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "32.png",
    "default_title": "Fast Fashion Begone",
    "default_popup": "index.html"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": false
  },
  "manifest_version": 2,
  "version": "0.5",
  "description": "Remove selected fast fashion brands from Vinted",
  "permissions": [
    "scripting",
    "webRequest",
    "storage",
    "https://www.vinted.pl/*",
    "https://www.vinted.at/*",
    "https://www.vinted.be/*",
    "https://www.vinted.ca/*",
    "https://www.vinted.cz/*",
    "https://www.vinted.de/*",
    "https://www.vinted.es/*",
    "https://www.vinted.fr/*",
    "https://www.vinted.hu/*",
    "https://www.vinted.it/*",
    "https://www.vinted.lt/*",
    "https://www.vinted.ro/*",
    "https://www.vinted.lu/*",
    "https://www.vinted.se/*",
    "https://www.vinted.nl/*",
    "https://www.vinted.sk/*",
    "https://www.vinted.co.uk/*",
    "https://www.vinted.com/*"
  ],
  "background": {
    "scripts": [
      "service-worker.js"
    ]
  }
}